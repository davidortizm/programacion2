#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main()
 {
   int suma,i,N;
   cout<< "ingresar el valor de n:";
   cin>> N;
   suma=0;
   for (i=1;i<=N;i++)
	   suma=suma+i*i;

   cout <<"la suma de los "<< N <<" primeros cuadrados naturales es:" << suma;
   getch();
	return 0;
}

